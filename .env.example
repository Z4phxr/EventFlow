# EventFlow Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real secrets to version control

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/eventflow
DB_USER=eventflow
DB_PASS=your_secure_database_password_here

# JWT Configuration
# Generate a secure random base64 string (at least 256 bits / 32 bytes)
# Example: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_base64_encoded_here

# Email Encryption Key (AES)
# Must be exactly 16 characters for AES-128 or 32 for AES-256
ENCRYPTION_KEY=YourSecretKey123

# Optional: Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Docker-specific (if using docker-compose)
POSTGRES_DB=eventflow
POSTGRES_USER=eventflow
POSTGRES_PASSWORD=your_secure_database_password_here

# RabbitMQ (for Grade 5.0 - currently not used)
# RABBITMQ_HOST=localhost
# RABBITMQ_USER=eventflow
# RABBITMQ_PASS=your_rabbitmq_password_here

# SMTP Configuration (for Email Invitations)
# Get free sandbox credentials from https://mailtrap.io/inboxes
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username_here
MAIL_PASSWORD=your_mailtrap_password_here
MAIL_FROM=noreply@eventflow.local

# Frontend Base URL (used in email invitation links)
FRONTEND_BASE_URL=http://localhost:5173
